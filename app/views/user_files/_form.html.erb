<%= form_with(model: user_file, local: true) do |form| %>
  <% if user_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user_file.errors.count, "error") %> prohibited this user_file from being saved:</h2>

      <ul>
        <% user_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :desc %>
    <%= form.text_field :desc %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div class="field">
    <%= form.label :tag %>
    <%= form.select :user_file_tag_ids, options_for_select(UserFileTag.order(:name).map{|s| [s.name, s.id]}), input_html: {multiple: true} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
